<section class="section">
  <div class="container">
    <div class="columns" >
      <div class="column" style="align-self: flex-start">
        <h2 class="is-size-2 has-text-weight-bold">
          Create Events
        </h2>
        <%= render 'events/form' %>
      </div>
      <div class="column">
        <h2 class="is-size-2 has-text-weight-bold">
          Organized Events
        </h2>
        <%= render 'events/events', events: @created_events %>

        <h2 class="is-size-2 has-text-weight-bold">
          Invited Events
        </h2>
        <%= render 'events/events', events: @invited_events %>
      </div>
    </div>
  </div>
</section>


