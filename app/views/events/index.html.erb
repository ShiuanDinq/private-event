<section class="section">
  <div class="container">
    <h2 class="is-size-2 has-text-weight-bold">
      Upcoming Events
    </h2>
    <%= render 'events', events:@events.where('date > ?', DateTime.now)%>
    <h2 class="is-size-2 has-text-weight-bold">
      Past Events
    </h2>
    <%= render 'events', events:@events.where('date < ?', DateTime.now)%>
  </div>
</section>

