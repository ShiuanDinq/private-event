<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvent</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>      
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>      
    <% end %>

    <nav class="navbar is-dark">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-5">Private</h1>
        <% end %>
        <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>

      </a>
      </div>


      <div class="navbar-menu" id="navMenu">
          <div class="navbar-end">
            <div class="navbar-item">
              <p>
                <%= link_to 'Sign In', new_user_session_path, class: "button" %>
              </p>
            </div>
            <div class="navbar-item">
              <p>
                <%= link_to 'Sign Up', new_user_registration_path, class: "button" %>
              </p>
            </div>
            <div class="navbar-item">
              <p>
                <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "button" %>
              </p>
            </div>
            <% if user_signed_in? %>
              <div class="navbar-item">
                <p>
                  <%= link_to current_user.name , current_user, class: "button" %>
                </p>
              </div>
            <% end %>
          </div>
      </div>

    </nav>
    <%= yield %>
  </body>
</html>
